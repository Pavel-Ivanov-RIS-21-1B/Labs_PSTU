#include <iostream>

using namespace std;
int a;//часы начала промежутка
int b;//минуты начала промежутка
int c;//секунды начала промежутка
int a1;//часы конца промежутка
int b1;//минуты конца промежутка
int c1;//секунды конца промежутка
int a2;//часы промежутка
int b2;//минуты промежутка
int c2;//секунды промежутка
int main()
{
    setlocale(LC_ALL, "Russian");
    cout << "введите часы,минуты,секунды начала промежутка " << endl;
    cin >> a;
    cin >> b;
    cin >> c;
    cout << "введите часы,минуты,секунды конца промежутка " << endl;
    cin >> a1;
    cin >> b1;
    cin >> c1;
    if (a1 < a)
    {
        cout << "ОШИБКА.Конец временного промежутка не может быть меньше начала" << endl;
    }
    else
    {
        if (a > 23 || b > 59 || c > 59 || a1 > 23 || b1 > 59 || c1 > 59)
        {
            cout << "ОШИБКА. Данные не соответствуют временному формату" << endl;
        }

        else
        {
            if (c1 > c)
            {
                c2 = c1 - c;
                if (b1 > b)
                {
                    b2 = b1 - b;
                    a2 = a1 - a;
                }
                else
                {
                    b2 = 60 - b + b1;
                    a2 = a1 - a - 1;
                }
            }
            else
            {
                c2 = 60 - c + c1;
                if (b1 > b)
                {
                    b2 = b1 - b - 1;
                    a2 = a1 - a;
                }
                else
                {
                    b2 = 59 - b + b1;
                    a2 = a1 - a - 1;
                }
            }
            cout << a2 << " часов " << b2 << " минут " << c2 << " секунд ";
        }
    }

    return 0;
}
