#include <iostream>
#include <time.h>
#include <cstdlib>
using namespace std;
int x;//загаданное число
int y;//число пользователя
int k;//счётчик попыток
int main()
{
	setlocale(LC_ALL, "Russian");// рус яз
	srand(time(0));
	y = 0;
	k = 0;
	x = rand() % 100;// загадывание числа
	while ((y != x) && (k != 7))// условие цикла
	{
		cout << "Осталось " << 7 - k << " попыт/ок/ка/ки" << endl;
		cout << "Введите число  от 1 до 100 " << endl;
		cin >> y;//ввод числа пользователем
		k = k + 1;
		if (y < x)
		{
			cout << "загаданное число больше" << endl;
		}
		else
			if (y > x)
			{
				cout << "загаданное число меньше" << endl;
			}
			else
			{
				cout << "угадал" << endl;// число угаданно пользователем
				k = 0;
			}
	}
	if (k == 7)
	{
		cout << "попыто больше нет " << endl;
		cout << "загаданное число " << x;// выводит загаданное число
	}
}
