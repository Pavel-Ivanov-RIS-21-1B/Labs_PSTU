#include <iostream>
using namespace std;
int s;// число, введенное пользователем
int x;// 1 цифра числа
int y;// 2 цифра числа
int z;// 3 цифра числа

int main()

{

    setlocale(LC_ALL, "RUSSIAN");// это включает русский язык 
    cout << "Введите трехзначное положительное число без повторяющихся цифр." << endl;
    do

    {


        cin >> s;// ввод числа пользователем

        if (s < 0)// эта часть кода проверяет знак числа
            cout << "ОШИБКА.Число меньше 0 . Введите корректное число" << endl;
        else
            if ((s < 100) || (s > 999))// эта часть кода проверяет на трёхзначность введённое число
                cout << "ОШИБКА. Число не трёхзначное. Введите корректное число." << endl;
            else

            {

                x = s / 100;// 1 цифрв числа
                y = (s / 10) % 10;// 2 цифра числа
                z = s % 10;// 3 цифра числа
                if ((x == y) || (y == z) || (x == z))// эта часть кода проверяет на отсутствие одиннаковых цифр
                    cout << "ОШИБКА. В числе не должно быть повторяющихся цифр. Введите корректное число." << endl;
                else
                    cout << "число введено корректно" << endl;

            }

    } while ((s < 100) || (s > 999) || (x == y) || (y == z) || (x == z));
    // требуем корректное число
    cout << x << y << z << endl;// эта часть кода выводит все возможные комбинации цифр числа
    cout << x << z << y << endl;
    cout << y << x << z << endl;
    cout << y << z << x << endl;
    cout << z << x << y << endl;
    cout << z << y << x << endl;
    if (x > y)// эта часть кода ищет и выводит наибольшее число среди всех комбинаций
        if (x > z)
            if (y > z)
                cout << x << y << z << " Наибольшее число ";
            else
                cout << x << z << y << " Наибольшее число";
        else
            cout << z << x << y << " Наибольшее число";
    else
        if (x > z)
            cout << y << x << z << " Наибольшее число";
        else
            if (y > z)
                cout << y << z << x << " Наибольшее число";
            else
                cout << z << y << x << " Наибольшее число";
    return 0;
}
